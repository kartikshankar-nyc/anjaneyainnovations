---
import Breadcrumbs from '../components/Breadcrumbs.astro';
const { title = 'Anjaneya Innovations', description = 'Professional consulting services by Anjaneya Innovations' } = Astro.props;
// Get current path for active link
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="robots" content={import.meta.env.PROD ? "index, follow" : "noindex, nofollow"}>
  <meta name="launch-status" content="stealth-mode">
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <!-- Cloudflare CDN integration -->
  <meta name="cf-2fa-verify" content="anjaneya-innovations">
  
  <!-- Scripts -->
  <script is:inline src="/scripts/favicon.js"></script>
  
  <title>{title}</title>
</head>
<body>
  <header>
    <nav>
      <div class="logo">
        <a href="/">
          <span class="logo-text">(Anjaneya Innovations)</span>
          <sup class="sup-ai">AI</sup>
        </a>
      </div>
      <div class="menu">
        <a href="/" class:list={[ { 'is-active': currentPath === '/' } ]}>Home</a>
        <a href="/services" class:list={[ { 'is-active': currentPath === '/services' || currentPath.startsWith('/services/') } ]}>Services</a>
        <a href="/about" class:list={[ { 'is-active': currentPath === '/about' } ]}>About</a>
        <a href="/contact" class:list={[ { 'is-active': currentPath === '/contact' } ]}>Contact</a>
      </div>
      <div class="header-status">
        <span>Status: Stealth</span>
      </div>
    </nav>
  </header>

  <!-- Restore Breadcrumbs rendering location -->
  {currentPath !== '/' && (
    <Breadcrumbs currentPageTitle={title} />
  )}

  <main>
    <slot />
  </main>

  <footer>
    <div class="footer-content">
      <div class="footer-section footer-info">
        <span class="logo-text-footer">Anjaneya Innovations</span>
        <p>Building the future, quietly.</p>
        <div class="stealth-note-footer">
          <span>Currently in Stealth Mode</span>
        </div>
      </div>
      <div class="footer-section footer-contact">
        <h3>Contact</h3>
        <p><a href="mailto:info@anjaneyainnovations.com?subject=Anjaneya%20Innovations%20-%20Inquiry">info@anjaneyainnovations.com</a></p>
      </div>
      <div class="footer-section footer-links">
        <h3>Navigate</h3>
        <a href="/">Home</a>
        <a href="/services">Services</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </div>
    </div>
    <div class="copyright">
      &copy; {new Date().getFullYear()} Anjaneya Innovations.
    </div>
  </footer>

  <script src="../scripts/main.js"></script>
</body>
</html>

<style>
  /* Base styles */
  :root {
    /* Option E Palette: Sophisticated Dark Mode */
    --primary-color: #E5E7EB; /* Light Gray/Off-White Text */
    --secondary-color: #9CA3AF; /* Medium Gray Text */
    --accent-color: #22D3EE; /* Bright Cyan */
    --background-color: #111827; /* Very Dark Blue/Gray BG */
    --card-bg-color: #1F2937; /* Slightly Lighter Dark BG for Cards */
    --border-color: #374151; /* Medium Dark Gray Borders */
    --text-on-light: #1F2937; /* Dark text if needed on light elements */
    --white: #ffffff;
    --black: #111827; /* Use background color as black reference */
    
    /* Typography: Inter */
    --font-sans: 'Inter', sans-serif;
    
    --shadow-subtle: 0 1px 2px rgba(0, 0, 0, 0.1);
    --shadow-medium: 0 4px 10px rgba(0, 0, 0, 0.2);
    --radius-default: 6px; /* Modern radius */
    --max-width: 1100px; 
  }
  
  /* Import Fonts - Moved link tag to <head> */

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-sans); /* Use Inter */
    color: var(--primary-color); /* Light primary text */
    background-color: var(--background-color); /* Dark background */
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    line-height: 1.7; /* Increased line height for readability */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-sans); /* Use Inter */
    font-weight: 800; /* Bold weight for headings */
    color: var(--primary-color); 
    line-height: 1.2;
    margin-bottom: 1rem;
  }
  
  /* Slightly increase base heading sizes */
  h1 { font-size: clamp(2.8rem, 5.5vw, 4.2rem); } 
  h2 { font-size: clamp(2rem, 4.5vw, 2.8rem); }
  h3 { font-size: clamp(1.4rem, 3.5vw, 1.8rem); } /* Adjusted size */

  p {
     margin-bottom: 1rem;
     max-width: 65ch; 
     color: var(--secondary-color); /* Medium gray for paragraphs */
     opacity: 1; /* Reset opacity */
  }

  a {
    /* Use Cyan accent for links */
    color: var(--accent-color); 
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  a:hover {
    /* Lighten cyan slightly on hover */
    color: #67E8F9;
  }

  /* Header & Navigation - Dark Mode */
  header {
    background-color: transparent; 
    position: sticky;
    top: 0;
    z-index: 1000; 
    border-bottom: 1px solid var(--border-color); 
    /* Slightly increase padding for larger text */
    padding: 0.8rem 0; 
    backdrop-filter: blur(8px); 
    background-color: rgba(17, 24, 39, 0.8); 

  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: 0 2rem; /* Horizontal padding */
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .logo {
    /* Use inline-flex and baseline alignment */
    display: inline-flex; 
    align-items: baseline;
    text-decoration: none;
    gap: 0.2em; /* Add small gap between text and sup */
  }
  
  .logo a {
    /* Remove positioning context */
    /* position: relative; */ 
    display: inline-block; 
    text-decoration: none;
    /* Ensure link also uses baseline alignment */
    vertical-align: baseline;
  }

  .logo-text {
    font-family: var(--font-sans); 
    font-weight: 700; 
    /* Increase font size */
    font-size: 1.4rem; 
    color: var(--primary-color); 
    text-decoration: none;
    transition: color 0.2s ease;
    /* Ensure text also uses baseline */
    vertical-align: baseline;
  }
  
  .logo:hover .logo-text {
     color: var(--primary-color); /* Keep light on hover */
  }

  .menu {
    display: flex;
    gap: 1.5rem; /* Increased gap for studio feel */
  }

  .menu a {
    color: var(--primary-color); /* Light menu links */
    text-decoration: none;
    font-weight: 600; /* Semi-bold Inter */
    font-size: 0.9rem;
    padding: 0.5rem 0; /* Only vertical padding */
    transition: color 0.2s ease;
    position: relative;
    letter-spacing: 0.5px;
  }
  
  .menu a::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0px; /* Position underline right below */
    left: 0;
    /* Set underline color to ACCENT */
    background-color: var(--accent-color);
    transition: width 0.3s ease; /* Keep width transition */
  }

  .menu a:hover {
    /* Set text color to ACCENT on hover */
    color: var(--accent-color);
  }
  
  /* Style for the active menu link */
  .menu a.is-active {
      color: var(--accent-color); /* Use accent color */
      font-weight: 700; /* Make slightly bolder */
  }
  /* Keep underline hidden by default for active link unless hovered */
  .menu a.is-active::after {
      width: 0;
  }
  .menu a.is-active:hover::after {
      width: 100%; /* Show underline on hover */
  }

  .header-status {
     font-size: 0.85rem;
     color: var(--secondary-color); /* Keep text gray for subtlety */
     /* Use accent border */
     border: 1px solid var(--accent-color);
     padding: 4px 10px 4px 8px; /* Adjust padding left */
     border-radius: var(--radius-default);
     /* Match header background */
     background-color: rgba(17, 24, 39, 0.8);
     /* Use flex for dot alignment */
     display: inline-flex;
     align-items: center;
     gap: 6px; /* Gap between dot and text */
  }
  
  /* Add pulsing dot */
  .header-status::before {
      content: '';
      width: 7px;
      height: 7px;
      background-color: var(--accent-color);
      border-radius: 50%;
      display: inline-block;
      /* Animation */
      animation: pulse-beacon 2s infinite cubic-bezier(0.45, 0.05, 0.55, 0.95);
  }

  /* Define the pulse animation */
  @keyframes pulse-beacon {
    0% {
      transform: scale(0.8);
      opacity: 0.7;
    }
    50% {
        transform: scale(1.2);
        opacity: 1;
    }
    100% {
      transform: scale(0.8);
      opacity: 0.7;
    }
  }

  /* Main Content */
  main {
    flex-grow: 1; 
  }

  /* Footer - Dark Mode */
  footer {
    background-color: transparent; /* Match body bg */
    color: var(--secondary-color); /* Medium gray footer text */
    opacity: 1; /* Reset opacity */
    padding: 3rem 2rem 2rem 2rem; 
    margin-top: auto;
    border-top: 1px solid var(--border-color); /* Subtle top border */
  }

  .footer-content {
    display: grid; /* Use grid for footer layout */
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem; 
    max-width: var(--max-width);
    margin: 0 auto 2rem auto; 
  }

  .footer-section {
     font-size: 0.9rem;
  }
  
  .footer-section h3 {
     color: var(--primary-color); /* Light headings */
     font-size: 1.1rem; 
     margin-bottom: 0.8rem;
     font-weight: 700; /* Bold Inter */
     letter-spacing: 0.5px;
  }
  
  .footer-section p {
      font-size: 0.9rem;
      margin-bottom: 0.5rem;
      max-width: none; /* Remove max width */
      color: var(--secondary-color); /* Medium gray for paragraphs */
  }
  
  .footer-section a {
      display: block;
      margin-bottom: 0.5rem;
      /* Links use cyan */
      color: var(--accent-color);
  }
  .footer-section a:hover {
      /* Lighten cyan */
      color: #67E8F9;
  }

  /* Footer specific elements */
  .logo-text-footer {
     font-family: var(--font-sans); /* Use Inter */
     font-weight: 700;
     font-size: 1.1rem;
     color: var(--primary-color); /* Light text */
     display: block;
     margin-bottom: 0.5rem;
  }
  
  .stealth-note-footer {
      margin-top: 1rem;
      font-size: 0.8rem;
      font-style: normal; /* Remove italic */
      color: var(--secondary-color); /* Medium gray */
      opacity: 1;
      padding: 5px 0;
      /* border-top: 1px dashed var(--border-color); */
      display: inline-block;
  }

  .copyright {
    text-align: center;
    margin-top: 2rem;
    padding-top: 1.5rem; 
    border-top: 1px solid var(--border-color); 
    font-size: 0.8rem; 
    color: var(--secondary-color); /* Medium gray */
    opacity: 0.8;
  }

  /* Responsive */
  @media (max-width: 768px) {
    nav {
       flex-wrap: wrap; /* Allow wrapping */
       justify-content: center; /* Center logo/menu */
       gap: 1rem; /* Add gap when wrapped */
    }
    
    .menu {
       order: 3; /* Move menu below logo/status */
       width: 100%;
       justify-content: center;
       gap: 1rem;
       margin-top: 0.5rem;
    }
    
    .menu a {
        padding: 0.5rem;
        /* Ensure default mobile link color */
        color: var(--primary-color);
        font-weight: 600; // Match default non-active state
    }
    
    /* Explicitly define active styles for mobile */
    .menu a.is-active {
        color: var(--accent-color); /* Cyan */
        font-weight: 700; /* Bolder */
    }

    .header-status {
        order: 2; /* Status after logo */
        font-size: 0.8rem;
        padding: 3px 8px;
    }

    .footer-content {
        grid-template-columns: 1fr; /* Stack footer sections */
        text-align: center;
    }
  }

  /* Style the sup AI */
  .logo sup.sup-ai {
    color: var(--accent-color);
    font-family: var(--font-sans); 
    font-weight: 700; 
    /* Increase relative size */
    font-size: 0.85em; 
    position: relative;
    /* Adjust top position slightly for new base size */
    top: -0.35em; 
    margin-left: -0.1em; 
  }

  /* REMOVE Global Button Styles */
  /* 
  .btn { ... }
  .btn:hover { ... }
  .btn-primary { ... }
  .btn-primary:hover { ... }
  .btn-secondary, .btn-outline { ... }
  .btn-secondary:hover, .btn-outline:hover { ... }
  .btn-text { ... }
  .btn-text .arrow { ... }
  .btn-text:hover { ... }
  .btn-text:hover .arrow { ... }
  */
</style> 
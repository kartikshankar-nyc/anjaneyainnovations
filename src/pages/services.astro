---
import MainLayout from '../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';

// Get all entries from the 'services' collection, sorted by order field
const services = (await getCollection('services')).sort(
  (a, b) => (a.data.order ?? 99) - (b.data.order ?? 99)
);
---

<MainLayout title="Our Capabilities - Anjaneya Innovations">
  <div class="page-wrapper">
    <section class="intro-section section-spacing">
      <div class="container">
        <div class="section-content animate-on-scroll">
          <h1 class="section-heading">Our Capabilities</h1>
          <p class="intro-tagline">Bespoke, AI-driven technology solutions designed for transformative results.</p>
          <p class="section-text">At Anjaneya Innovations, we deliver end-to-end technology solutions that integrate cutting-edge artificial intelligence, cloud architecture, and modern engineering practices. Our expertise spans across critical business functions and specialized domains, allowing us to address complex challenges with precision and vision.</p>
          <p class="section-text">Our team of seasoned technologists and strategists work as an extension of your organization, bringing both technical excellence and business acumen to every engagement. Whether you need strategic guidance, implementation support, or full-scale digital transformation, we tailor our approach to deliver measurable results that drive your business forward.</p>
        </div>
      </div>
    </section>

    <section class="services-section section-spacing">
      <div class="container">
        <div class="section-content">
          <!-- Loop through services collection -->
          {services.map(service => (
            <div class="service-item animate-on-scroll">
              <div class="service-content">
                <h2 class="section-heading">{service.data.title}</h2>
                <p class="section-text">{service.data.description}</p>
                {service.data.features && service.data.features.length > 0 && (
                  <ul class="feature-list">
                    {service.data.features.map(feature => <li>{feature}</li>)}
                  </ul>
                )}
              </div>
            </div>
          ))}
          <!-- End loop -->
        </div>
      </div>
    </section>

    <section class="approach-section section-spacing">
      <div class="container">
        <div class="section-content animate-on-scroll">
          <h2 class="section-heading">Our Approach</h2>
          <p class="section-text centered-text">We follow a structured yet flexible methodology that emphasizes collaboration, transparency, and measurable outcomes. Each step is designed to maximize value and minimize risk.</p>
          
          <div class="process-steps">
            <div class="process-step">
              <div class="step-number">1</div>
              <h3>Discovery</h3>
              <p>Understand your business goals, context, challenges, and unique requirements through deep stakeholder engagement and analysis.</p>
            </div>
            
            <div class="process-step">
              <div class="step-number">2</div>
              <h3>Analysis</h3>
              <p>Analyze your current state, market landscape, and identify key opportunities using data-driven insights and industry expertise.</p>
            </div>
            
            <div class="process-step">
              <div class="step-number">3</div>
              <h3>Strategy</h3>
              <p>Design bespoke, practical, and high-impact solutions rigorously aligned with your objectives and technical realities.</p>
            </div>
            
            <div class="process-step">
              <div class="step-number">4</div>
              <h3>Implementation</h3>
              <p>Execute with precision, agility, and seamless integration with your teams, using modern engineering practices and transparent progress tracking.</p>
            </div>
            
            <div class="process-step">
              <div class="step-number">5</div>
              <h3>Evaluation</h3>
              <p>Continuously measure results, refine approaches, and ensure tangible value delivery against defined success metrics.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="cta-section section-spacing">
      <div class="container">
        <div class="section-content animate-on-scroll text-center">
          <h2 class="section-heading">Ready to Transform Your Business?</h2>
          <p class="section-text">Schedule a consultation to learn how our capabilities can help you achieve your business goals and overcome technology challenges.</p>
          <a href="/contact" class="btn btn-primary">Contact Us Today</a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

<style>
  /* Page Wrapper */
  .page-wrapper {
    width: 100%;
    overflow-x: hidden;
  }

  /* Common Section Styling */
  .section-spacing {
    padding: var(--space-3xl) 0;
    border-bottom: 1px solid var(--border-color);
  }
  
  .section-spacing:last-child {
    border-bottom: none;
  }
  
  /* Container */
  .container {
    max-width: var(--max-width);
    width: 100%;
    margin: 0 auto;
    padding: 0 var(--space-xl);
  }
  
  /* Section Content */
  .section-content {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
  }
  
  /* Heading Styles */
  .section-heading {
    font-size: clamp(2.2rem, 5vw, 3rem);
    font-weight: 800;
    color: var(--primary-color);
    margin-bottom: var(--space-lg);
    position: relative;
    display: inline-block;
    padding-bottom: var(--space-xs);
    border-bottom: 2px solid var(--accent-color);
  }
  
  h1.section-heading {
    font-size: clamp(2.8rem, 5.5vw, 4rem);
  }
  
  /* Text Styles */
  .section-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--secondary-color);
    margin-bottom: var(--space-lg);
  }
  
  .centered-text {
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    max-width: 800px;
  }
  
  .intro-tagline {
    font-size: 1.2rem;
    font-weight: 400;
    color: var(--secondary-color);
    margin-bottom: var(--space-xl);
  }
  
  .text-center {
    text-align: center;
  }

  /* Services Section */
  .service-item {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-xl);
    border-bottom: 1px solid var(--border-color);
  }
  
  .service-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }
  
  /* Feature Lists */
  .feature-list {
    padding-left: 1.5rem;
    list-style: none;
    margin-top: var(--space-md);
    margin-bottom: var(--space-xl);
  }

  .feature-list li {
    margin-bottom: var(--space-sm);
    position: relative;
    font-size: 1rem;
    color: var(--secondary-color);
  }

  .feature-list li::before {
    content: "â†’";
    color: var(--accent-color);
    font-weight: bold;
    display: inline-block;
    width: 1.5em;
    margin-left: -1.6em; 
    font-size: 1.3em;
    line-height: 1;
  }

  /* Process Section */
  .approach-section {
    background-color: var(--background-color);
  }
  
  .process-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg); 
    margin-top: var(--space-2xl);
  }

  .process-step {
    background-color: var(--card-bg-color);
    padding: var(--space-lg);
    border-radius: var(--radius-default);
    border: 1px solid var(--border-color);
    transition: transform 0.3s ease, border-color 0.3s ease;
    text-align: center;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .process-step:hover {
    transform: translateY(-5px);
    border-color: var(--accent-color);
  }

  .step-number {
    width: 40px;
    height: 40px;
    line-height: 40px;
    border-radius: 50%;
    background-color: var(--accent-color);
    color: var(--text-on-light);
    font-weight: 700;
    margin: 0 auto var(--space-md) auto;
    font-size: 1.1rem;
  }

  .process-step h3 {
    font-size: 1.2rem;
    margin-bottom: var(--space-sm);
    color: var(--primary-color);
    font-weight: 700;
  }
  
  .process-step p {
    font-size: 0.95rem;
    color: var(--secondary-color);
    margin-bottom: 0;
    flex-grow: 1;
  }

  /* CTA Section */
  .cta-section {
    background-color: var(--background-color);
    text-align: center;
  }

  .cta-section .section-text {
    max-width: 600px;
    margin: 0 auto var(--space-xl);
  }

  /* Button styles */
  .btn {
    display: inline-block;
    padding: 0.9rem 2.2rem; 
    border-radius: var(--radius-default); 
    text-decoration: none;
    font-family: var(--font-sans);
    font-weight: 800; 
    font-size: 0.9rem;
    transition: all 0.2s ease-in-out;
    border: 1px solid transparent;
    cursor: pointer;
    text-align: center;
    letter-spacing: 0.5px;
    text-transform: uppercase; 
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 3px 6px rgba(0,0,0,0.1); 
  }

  .btn-primary {
    background-color: var(--card-bg-color);
    color: var(--primary-color);
    border-color: var(--accent-color);
  }
  
  .btn-primary:hover {
    background-color: var(--accent-color);
    color: var(--text-on-light);
    border-color: var(--accent-color);
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
    .section-spacing {
      padding: var(--space-2xl) 0;
    }
    
    .container {
      padding: 0 var(--space-md);
    }
    
    .section-heading {
      margin-bottom: var(--space-md);
    }
    
    .section-text {
      font-size: 1rem;
      margin-bottom: var(--space-md);
    }
    
    .service-item {
      margin-bottom: var(--space-xl);
      padding-bottom: var(--space-lg);
    }
    
    .process-steps {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }
    
    .process-step {
      padding: var(--space-md);
      margin-bottom: var(--space-md);
    }
  }
</style> 
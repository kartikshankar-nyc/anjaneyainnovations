---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Contact Us - Anjaneya Innovations LLC">
  <section class="page-header">
    <div class="container">
      <div class="header-logo">
        <img src="/images/ai-logo.svg" alt="Anjaneya Innovations" class="header-logo-image" />
      </div>
      <h1>Contact Us</h1>
      <p>Get in touch with our team to discuss your business needs</p>
    </div>
  </section>

  <section class="contact-content">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-form-container animate-on-scroll">
          <h2>Send Us a Message</h2>
          <form class="contact-form" id="contactForm">
            <div class="form-group">
              <label for="name">Your Name</label>
              <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" name="phone">
            </div>
            <div class="form-group">
              <label for="company">Company Name</label>
              <input type="text" id="company" name="company">
            </div>
            <div class="form-group full-width">
              <label for="subject">Subject</label>
              <input type="text" id="subject" name="subject" required>
            </div>
            <div class="form-group full-width">
              <label for="message">Your Message</label>
              <textarea id="message" name="message" rows="6" required></textarea>
            </div>
            <div class="form-group full-width">
              <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
          </form>
        </div>
        
        <div class="contact-info animate-on-scroll">
          <h2>Contact Information</h2>
          <div class="info-item">
            <h3>Email Us</h3>
            <p><a href="mailto:info@anjaneyainnovations.com">info@anjaneyainnovations.com</a></p>
          </div>
          
          <div class="info-item">
            <h3>Call Us</h3>
            <p><a href="tel:+11234567890">+1 (123) 456-7890</a></p>
          </div>
          
          <div class="info-item">
            <h3>Visit Us</h3>
            <p>123 Business Avenue<br>Suite 456<br>New York, NY 10001</p>
          </div>
          
          <div class="info-item">
            <h3>Business Hours</h3>
            <p>Monday - Friday: 9:00 AM - 5:00 PM<br>Saturday - Sunday: Closed</p>
          </div>

          <div class="social-links">
            <h3>Connect With Us</h3>
            <div class="social-icons">
              <a href="#" class="social-icon" aria-label="LinkedIn">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                  <rect x="2" y="9" width="4" height="12"></rect>
                  <circle cx="4" cy="4" r="2"></circle>
                </svg>
              </a>
              <a href="#" class="social-icon" aria-label="Twitter">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                </svg>
              </a>
              <a href="#" class="social-icon" aria-label="Facebook">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="map animate-on-scroll">
    <div class="map-placeholder">
      <!-- Map will be added here when proper APIs are integrated -->
      <div class="map-overlay">
        <p>Map loading...</p>
      </div>
    </div>
  </section>

  <section class="faq animate-on-scroll">
    <div class="container">
      <h2 class="section-title">Frequently Asked Questions</h2>
      <div class="faq-list">
        <div class="faq-item">
          <h3 class="faq-question">How do I schedule a consultation?</h3>
          <div class="faq-answer">
            <p>You can schedule a consultation by filling out the contact form on this page, emailing us directly, or calling our office during business hours.</p>
          </div>
        </div>
        
        <div class="faq-item">
          <h3 class="faq-question">What areas do you serve?</h3>
          <div class="faq-answer">
            <p>We provide consulting services both remotely and in-person across the United States. For international clients, we offer virtual consultations.</p>
          </div>
        </div>
        
        <div class="faq-item">
          <h3 class="faq-question">How quickly can you start on a new project?</h3>
          <div class="faq-answer">
            <p>Our typical onboarding process takes 1-2 weeks from initial consultation to project kickoff, depending on the scope and complexity of your needs.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Page Header */
  .page-header {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: white;
    padding: 6rem 2rem;
    text-align: center;
  }
  
  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/images/pattern-overlay.svg') repeat;
    opacity: 0.1;
    z-index: 1;
  }
  
  .page-header::after {
    content: '';
    position: absolute;
    top: -20%;
    right: -10%;
    width: 60%;
    height: 140%;
    background: radial-gradient(circle, var(--accent-color) 0%, transparent 70%);
    opacity: 0.2;
    z-index: 0;
  }

  .page-header .container {
    position: relative;
    z-index: 2;
  }

  .page-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-family: var(--font-heading);
    font-weight: 800;
  }

  .page-header p {
    font-size: 1.25rem;
    max-width: 800px;
    margin: 0 auto;
    opacity: 0.9;
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem 5%;
  }

  /* Contact Grid */
  .contact-grid {
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 4rem;
  }

  /* Contact Form */
  .contact-form-container h2,
  .contact-info h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: var(--primary-color);
  }

  .contact-form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group.full-width {
    grid-column: span 2;
  }

  label {
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  input,
  textarea {
    padding: 0.8rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-family: inherit;
    font-size: 1rem;
  }

  textarea {
    resize: vertical;
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(255, 122, 0, 0.2);
  }

  /* Button */
  .btn {
    display: inline-block;
    padding: 12px 24px;
    font-weight: 600;
    text-align: center;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background-color: var(--primary-color);
    color: white;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  }

  .btn-primary:hover {
    background-color: var(--secondary-color);
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }

  /* Contact Info */
  .contact-info {
    background-color: #f8f9fa;
    padding: 2rem;
    border-radius: 8px;
  }

  .info-item {
    margin-bottom: 1.5rem;
  }

  .info-item h3 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    color: var(--primary-color);
  }

  .info-item a {
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .info-item a:hover {
    color: var(--color-secondary);
  }

  /* Social Links */
  .social-links h3 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
  }

  .social-icons {
    display: flex;
    gap: 1rem;
  }

  .social-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-color);
    transition: all 0.3s ease;
  }

  .social-icon:hover {
    background-color: var(--color-secondary);
    color: white;
  }

  /* Map */
  .map-placeholder {
    width: 100%;
    height: 400px;
    background-color: #f0f0f0;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .map-overlay {
    text-align: center;
    color: #777;
  }

  /* FAQ Section */
  .faq {
    background-color: #f8f9fa;
  }

  .section-title {
    font-size: 2.2rem;
    margin-bottom: 3rem;
    text-align: center;
    color: var(--primary-color);
  }

  .faq-list {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    margin-bottom: 1.5rem;
    border-bottom: 1px solid #ddd;
    padding-bottom: 1.5rem;
  }

  .faq-question {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--color-text);
    cursor: pointer;
    position: relative;
    padding-right: 30px;
  }

  .faq-question::after {
    content: '+';
    position: absolute;
    right: 0;
    top: 0;
    font-size: 1.5rem;
    color: var(--primary-color);
  }

  .faq-answer {
    line-height: 1.7;
  }

  /* Responsive Styles */
  @media (max-width: 992px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .contact-info {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2.2rem;
    }

    .contact-form {
      grid-template-columns: 1fr;
    }

    .form-group.full-width {
      grid-column: span 1;
    }

    .container {
      padding: 3rem 5%;
    }
  }

  .header-logo {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }

  .header-logo-image {
    width: 100px;
    height: 100px;
    filter: drop-shadow(0 0 15px rgba(255, 122, 0, 0.5));
    animation: logoFloat 4s ease-in-out infinite;
  }

  @keyframes logoFloat {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
</style>

<script>
  // Contact form functionality will be added when JavaScript environment is set up
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contactForm');
    if (contactForm) {
      contactForm.addEventListener('submit', (e) => {
        e.preventDefault();
        // Form submission logic will be implemented later
        alert('Thank you for your message! We will get back to you soon.');
        contactForm.reset();
      });
    }

    // FAQ accordion functionality
    const faqQuestions = document.querySelectorAll('.faq-question');
    faqQuestions.forEach(question => {
      question.addEventListener('click', () => {
        const answer = question.nextElementSibling;
        const isOpen = answer.style.display === 'block';
        
        // Close all answers
        document.querySelectorAll('.faq-answer').forEach(a => {
          a.style.display = 'none';
        });
        
        // Update all question markers
        document.querySelectorAll('.faq-question').forEach(q => {
          q.classList.remove('open');
        });
        
        // Open clicked question if it was closed
        if (!isOpen) {
          answer.style.display = 'block';
          question.classList.add('open');
        }
      });
    });

    // Initially open the first FAQ
    if (faqQuestions.length > 0) {
      faqQuestions[0].click();
    }
  });
</script> 
---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Contact Us - Anjaneya Innovations">
  <section class="page-header">
    <div class="container">
      <div class="header-logo">
        <img src="/images/ai-logo.svg" alt="Anjaneya Innovations" class="header-logo-image" />
      </div>
      <h1>Contact Us</h1>
      <p>Get in touch with our team to discuss your business needs</p>
    </div>
  </section>

  <section class="contact-content">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-form-container animate-on-scroll">
          <h2>Send Us a Message</h2>
          <p class="form-guidance">Reach out to discuss your challenges and explore potential partnership opportunities. Please provide a brief overview of your needs.</p>
          <form class="contact-form" id="contactForm">
            <div class="form-group">
              <label for="name">Your Name</label>
              <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" name="phone">
            </div>
            <div class="form-group">
              <label for="company">Company Name</label>
              <input type="text" id="company" name="company">
            </div>
            <div class="form-group full-width">
              <label for="subject">Subject</label>
              <input type="text" id="subject" name="subject" required>
            </div>
            <div class="form-group full-width">
              <label for="message">Your Message</label>
              <textarea id="message" name="message" rows="6" required></textarea>
            </div>
            <div class="form-group full-width">
              <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
          </form>
        </div>
        
        <div class="contact-info animate-on-scroll">
          <h2>Contact Information</h2>
          <div class="info-item">
            <h3>Email Us</h3>
            <p><a href="mailto:info@anjaneyainnovations.com">info@anjaneyainnovations.com</a></p>
          </div>
          
          <div class="info-item">
            <h3>Call Us</h3>
            <p><a href="tel:+11234567890">+1 (123) 456-7890</a></p>
          </div>
          
          <div class="info-item">
            <h3>Visit Us</h3>
            <p>123 Business Avenue<br>Suite 456<br>New York, NY 10001</p>
          </div>
          
          <div class="info-item">
            <h3>Business Hours</h3>
            <p>Monday - Friday: 9:00 AM - 5:00 PM<br>Saturday - Sunday: Closed</p>
          </div>

          <div class="social-links">
            <h3>Connect With Us</h3>
            <div class="social-icons">
              <a href="#" class="social-icon" aria-label="LinkedIn">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                  <rect x="2" y="9" width="4" height="12"></rect>
                  <circle cx="4" cy="4" r="2"></circle>
                </svg>
              </a>
              <a href="#" class="social-icon" aria-label="Twitter">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                </svg>
              </a>
              <a href="#" class="social-icon" aria-label="Facebook">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="map animate-on-scroll">
    <div class="map-placeholder">
      <!-- Map will be added here when proper APIs are integrated -->
      <div class="map-overlay">
        <p>Map loading...</p>
      </div>
    </div>
  </section>

  <section class="faq animate-on-scroll">
    <div class="container">
      <h2 class="section-title">Frequently Asked Questions</h2>
      <div class="faq-list">
        <div class="faq-item">
          <h3 class="faq-question">How do I schedule a consultation?</h3>
          <div class="faq-answer">
            <p>You can schedule a consultation by filling out the contact form on this page, emailing us directly, or calling our office during business hours.</p>
          </div>
        </div>
        
        <div class="faq-item">
          <h3 class="faq-question">What areas do you serve?</h3>
          <div class="faq-answer">
            <p>We provide consulting services both remotely and in-person across the United States. For international clients, we offer virtual consultations.</p>
          </div>
        </div>
        
        <div class="faq-item">
          <h3 class="faq-question">How quickly can you start on a new project?</h3>
          <div class="faq-answer">
            <p>Our typical onboarding process takes 1-2 weeks from initial consultation to project kickoff, depending on the scope and complexity of your needs.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Restyle page header for Dark Mode */
  .page-header {
    background: var(--card-bg-color);
    color: var(--primary-color);
    padding: var(--space-3xl) var(--space-xl) var(--space-2xl); 
    text-align: center;
    position: relative;
    overflow: hidden;
    border-bottom: 1px solid var(--border-color);
  }
  
  /* Remove old overlays and logo */
  .page-header::before, 
  .page-header::after, 
  .header-logo {
     display: none; 
  }
  /* Remove logo keyframes */
  /* @keyframes logoFloat { ... } */

  .page-header .container {
    position: relative;
    z-index: 2;
  }

  .page-header h1 {
    font-size: clamp(2.8rem, 5.5vw, 4rem); 
    margin-bottom: var(--space-lg);
    font-weight: 800;
    color: var(--primary-color);
    border-bottom: 2px solid var(--accent-color);
    display: block; 
    width: fit-content;
    text-align: center; 
    margin-left: auto;
    margin-right: auto;
    padding-bottom: var(--space-xs);
  }

  .page-header p {
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto;
    font-weight: 400; 
    color: var(--secondary-color);
  }

  /* Container - use global */
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--space-3xl) var(--space-xl); 
  }
  
  /* Apply Section background */
  .contact-content {
      background-color: var(--background-color); /* Darkest */
  }
  .map {
      background-color: var(--card-bg-color); /* Lighter dark */
  }
  .faq {
      background-color: var(--background-color); /* Darkest */
      border-top: 1px solid var(--border-color);
  }


  /* Contact Grid */
  .contact-grid {
    display: grid;
    /* Adjust column ratio to give info more space */
    grid-template-columns: 3fr 2fr; 
    gap: var(--space-2xl);
    align-items: start;
  }

  /* Contact Form - Dark Mode */
  .contact-form-container h2,
  .contact-info h2 {
    font-size: clamp(1.8rem, 4vw, 2.2rem); 
    padding-bottom: var(--space-xs); 
    margin-bottom: var(--space-xl);
    color: var(--primary-color);
    border-bottom: 2px solid var(--accent-color);
    display: block; 
    width: fit-content;
    text-align: left;
    margin-left: 0;
    margin-right: 0;
  }

  .contact-form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-lg); 
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group.full-width {
    grid-column: span 2;
  }

  label {
    margin-bottom: var(--space-sm);
    font-weight: 600; /* Bolder labels */
    font-size: 0.9rem;
    color: var(--secondary-color);
  }

  input,
  textarea {
    padding: var(--space-md); 
    border: 1px solid var(--border-color);
    border-radius: var(--radius-default);
    font-family: inherit;
    font-size: 1rem;
    background-color: var(--card-bg-color); /* Card bg for inputs */
    color: var(--primary-color); /* Light text in inputs */
  }

  textarea {
    resize: vertical;
    min-height: 120px;
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: var(--accent-color); /* Cyan focus */
    box-shadow: 0 0 0 2px rgba(34, 211, 238, 0.3); /* Cyan glow */
  }

  .form-guidance {
      font-size: 0.95rem;
      color: var(--secondary-color);
      margin-bottom: var(--space-xl);
  }

  /* Define button styles locally */
  .btn {
    display: inline-block;
    padding: 0.9rem 2.2rem; 
    border-radius: var(--radius-default); 
    text-decoration: none;
    font-family: var(--font-sans);
    font-weight: 800; 
    font-size: 0.9rem;
    transition: all 0.2s ease-in-out;
    border: 1px solid transparent;
    cursor: pointer;
    text-align: center;
    letter-spacing: 0.5px;
    text-transform: uppercase; 
  }

  .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 3px 6px rgba(0,0,0,0.1); 
  }

  .btn-primary {
    /* Default: Dark bg, light text, accent border */
    background-color: var(--card-bg-color);
    color: var(--primary-color);
    border-color: var(--accent-color);
  }

  .btn-primary:hover {
    /* Hover: Cyan bg, dark text */
    background-color: var(--accent-color); 
    border-color: var(--accent-color);
    color: var(--text-on-light);
  }

  /* Contact Info - Dark Mode */
  .contact-info {
    background-color: var(--card-bg-color); /* Card bg */
    padding: var(--space-xl);
    border-radius: var(--radius-default);
    border: 1px solid var(--border-color);
  }

  .info-item {
    margin-bottom: var(--space-lg);
  }

  .info-item h3 {
    font-size: 1.2rem; /* Adjust size */
    margin-bottom: var(--space-sm);
    color: var(--primary-color);
    font-weight: 700;
  }
  
  .info-item p {
      color: var(--secondary-color);
      font-size: 0.95rem;
      line-height: 1.6;
  }

  .info-item a {
    color: var(--accent-color); /* Cyan links */
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .info-item a:hover {
    color: #67E8F9; /* Lighter cyan */
  }

  /* Social Links - Dark Mode */
  .social-links h3 {
    font-size: 1.2rem;
    margin-bottom: var(--space-md);
    color: var(--primary-color);
    font-weight: 700;
  }

  .social-icons {
    display: flex;
    gap: var(--space-md);
  }

  .social-icon {
    width: 36px; /* Adjust size */
    height: 36px;
    border-radius: var(--radius-default); /* Match button radius */
    background-color: var(--background-color); /* Darker bg */
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--secondary-color); /* Medium gray icon */
    transition: all 0.3s ease;
    border: 1px solid var(--border-color);
  }

  .social-icon svg {
      width: 18px;
      height: 18px;
  }

  .social-icon:hover {
    background-color: var(--accent-color);
    color: var(--text-on-light); /* Dark icon on cyan */
    border-color: var(--accent-color);
  }

  /* Map - Dark Mode */
  .map {
      padding: 0; /* Remove padding */
  }
  
  .map-placeholder {
    width: 100%;
    height: 400px;
    background-color: var(--background-color); /* Darkest bg */
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
  }

  .map-overlay {
    text-align: center;
    color: var(--secondary-color);
    opacity: 0.8;
  }

  /* FAQ Section - Dark Mode */
  /* Use global section title */
  .section-title {
    font-size: clamp(2.2rem, 5vw, 3rem); 
    padding-bottom: var(--space-xs); 
    margin-bottom: var(--space-xl); 
    color: var(--primary-color); 
    font-weight: 800;
    border-bottom: 2px solid var(--accent-color);
    display: block; 
    width: fit-content;
    text-align: left;
    margin-left: 0;
    margin-right: 0;
  }

  .faq-list {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    margin-bottom: var(--space-md);
    border-bottom: 1px solid var(--border-color);
    padding-bottom: var(--space-md);
  }
  
  .faq-item:last-child {
      border-bottom: none;
      margin-bottom: 0;
      padding-bottom: 0;
  }

  .faq-question {
    font-size: 1.2rem;
    font-weight: 600; /* Make question bolder */
    margin-bottom: var(--space-sm); /* Reduce margin */
    color: var(--primary-color);
    cursor: pointer;
    position: relative;
    padding-right: 30px;
    transition: color 0.2s ease;
  }
  
  .faq-question:hover {
      color: var(--accent-color);
  }

  .faq-question::after {
    content: '+';
    position: absolute;
    right: 0;
    top: 0;
    font-size: 1.5rem;
    color: var(--secondary-color);
    transition: transform 0.3s ease, color 0.2s ease;
  }
  
  .faq-question.open::after {
      transform: rotate(45deg);
      color: var(--accent-color);
  }

  .faq-answer {
    line-height: 1.7;
    color: var(--secondary-color);
    font-size: 0.95rem;
    padding-top: var(--space-sm);
    display: none; /* Hide by default */
  }

  /* Responsive Styles */
  @media (max-width: 992px) {
    .contact-grid {
      /* Stack grid on tablet too */
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .contact-info {
      order: -1; /* Info first on tablet */
    }
  }

  @media (max-width: 768px) {
    /* page header global */
    
    .contact-form {
      grid-template-columns: 1fr;
    }

    .form-group.full-width {
      grid-column: span 1;
    }

    /* container global */
    .container {
      padding: var(--space-2xl) var(--space-md); 
    }
  }

  /* Remove old logo styles */
  /* 
  .header-logo { ... }
  .header-logo-image { ... }
  @keyframes logoFloat { ... }
  */
</style>

<script>
  // Contact form functionality will be added when JavaScript environment is set up
  document.addEventListener('DOMContentLoaded', () => {
    const contactForm = document.getElementById('contactForm');
    if (contactForm) {
      contactForm.addEventListener('submit', (e) => {
        e.preventDefault();
        // Form submission logic will be implemented later
        alert('Thank you for your message! We will get back to you soon.');
        contactForm.reset();
      });
    }

    // FAQ accordion functionality
    const faqItems = document.querySelectorAll('.faq-item');
    faqItems.forEach(item => {
        const question = item.querySelector('.faq-question');
        const answer = item.querySelector('.faq-answer');
        
        if (question && answer) {
            question.addEventListener('click', () => {
                const isOpen = answer.style.display === 'block';
                
                // Close all other answers
                faqItems.forEach(otherItem => {
                    if (otherItem !== item) {
                        otherItem.querySelector('.faq-answer').style.display = 'none';
                        otherItem.querySelector('.faq-question').classList.remove('open');
                    }
                });
                
                // Toggle current answer
                if (isOpen) {
                    answer.style.display = 'none';
                    question.classList.remove('open');
                } else {
                    answer.style.display = 'block';
                    question.classList.add('open');
                }
            });
        }
    });

    // // Optionally open the first FAQ initially
    // if (faqItems.length > 0) {
    //   const firstQuestion = faqItems[0].querySelector('.faq-question');
    //   if (firstQuestion) firstQuestion.click();
    // }
  });
</script> 